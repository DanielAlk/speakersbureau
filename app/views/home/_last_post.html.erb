<div class="container last-post">
	<div class="row">
		<div class="col-xs-7">
			<iframe class="last-post-video" src="<%= @last_post.video_url %>" frameborder="0" allowfullscreen></iframe>
		</div>
		<div class="col-xs-5">
			<h2 class="border-bottom-arrow primary">Destacado</h2>
			<h3 class="post-date"><%= @last_post.date %> <small>TB&amp;ASOC.</small></h3>
			<p><%= strip_tags(@last_post.short_body).html_safe + '...' %></p>
			<%= link_to 'Leer mas', @last_post, class: 'arrow-right' %>
		</div>
	</div>
</div>