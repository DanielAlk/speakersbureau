  $('.colorpicker').colorpicker()
<% end %>

<%= form_for(@bulat_team_member) do |f| %>
  <% if @bulat_team_member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bulat_team_member.errors.count, "error") %> prohibited this bulat_team_member from being saved:</h2>

      <ul>
      <% @bulat_team_member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color, class: 'colorpicker', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control', required: @bulat_team_member.image.blank? %>
  </div>
  <div class="actions" style="margin-top:30px;">
    <%= f.submit %>
  </div>
<% end %>
