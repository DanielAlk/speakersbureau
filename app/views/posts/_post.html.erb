<div class="row">
	<div class="col-xs-4">
		<div class="youtube-video">
			<iframe src="<%= post.video_url %>" frameborder="0" allowfullscreen></iframe>
		</div>
	</div>
	<div class="col-xs-8">
		<h2 class="primary"><%= post.title %></h2>
		<h3 class="post-date"><%= post.date_short %> <small>TB&amp;ASOC.</small></h3>
		<p><%= strip_tags(post.shorter_body).html_safe + '...' %></p>
		<%= link_to 'Leer mas', post, class: 'arrow-right' %>
	</div>
</div>
<hr>