$primary-color: #D61B16;
$primary-color-dark: #79110F;
$default-color: #3e3e3e;
$grey: #d3d3d3;
$light-grey: #f8f8f8;
$dark-grey: #bbbbbb;
$twitter-blue: #00ACDF;
$twitter-blue-dark: #036E8E;

body { font-family: 'Roboto', sans-serif; font-weight: 300; font-size: 14px; color: $default-color; }
.logo-main { height: 45px; width: auto; }

/* TEXT */
small { font-weight: 300; }
.uppercase { text-transform: uppercase; }
/* TEXT COLORS */
.primary { color: $primary-color; }
.default { color: $default-color; }

/* BACKGROUND COLORS */
.fill-primary { background-color: $primary-color; color: #FFF; }
.fill-grey { background-color: $grey; }
.fill-grey hr { border-color: $default-color; }
.fill-light-grey { background-color: $light-grey; }

/* LINKS */
a { color: $primary-color; }
a:hover, a:focus { color: $primary-color-dark; }
a.default:hover, a.default:focus { color: #000; }
/* arrow-right */
a.arrow-right { font-style: italic; text-decoration: underline; }
a.arrow-right:after { content: '>'; text-decoration: none; display: inline-block; margin-left: 5px; }
a.arrow-back { color: #FFF; font-size: 16px; font-weight: 300; }
a.arrow-back:before {
	content: '<'; border: 1px solid #FFF; display: inline-block; border-radius: 50%; font-size: 16px;
	margin-right: 5px; width: 18px; height: 18px; text-align: center; vertical-align: bottom;
}
a.with-icon>.glyphicon { margin-right: 10px; }

/* SHAPES */
.round { border-radius: 50%; padding: 5px; }

/* FORM CONTROL */
.form-control { background-color: $light-grey; border-color: $grey; border-radius: 0; }
form [type=submit] { padding-left: 40px; padding-right: 40px; }
.form-control.ui.dropdown.multiple { height: auto; min-height: 34px; background-color: $light-grey; border-radius: 0; }

/* BUTTONS */
.btn { text-transform: uppercase; border-radius: 0; padding: 6px 20px; border: none; }
.btn-primary { background-color: $primary-color; }
.btn-primary:hover, .btn-primary:focus, .btn-primary:active, .btn-primary.active, .open > .btn-primary.dropdown-toggle { 
	background-color: $primary-color-dark;
}
.btn-invert { color: $primary-color; background-color: #FFF; }
.btn-invert:hover, .btn-invert:focus, .btn-invert:active, .btn-invert.active, .open > .btn-invert.dropdown-toggle {
	color: $primary-color-dark;
}
.btn-twitter { color: #FFF; background-color: $twitter-blue; }
.btn-twitter img { margin: -5px 0 -5px 10px }
.btn-twitter:hover, .btn-twitter:focus, .btn-twitter:active, .btn-twitter.active, .open > .btn-twitter.dropdown-toggle {
	background-color: $twitter-blue-dark; color: #FFF;
}
/* cancel button functionality on spans */
span.btn { cursor: initial; }
span.btn-primary:hover, span.btn-primary:focus { background-color: $primary-color; }
/* BUTTON GROUPS */
.btn-group-justified, .btn-toolbar { padding: 5px; background-color: $grey; }
.btn-group-justified>.btn-group:not(:last-child), .btn-toolbar>.btn-group:not(:last-child) { padding-right: 5px; }
.btn-group-justified .btn, .btn-toolbar .btn { text-transform: none; padding: 9px 0; text-align: center; }
.btn-group-justified .form-control { border: none; border-radius: 0; height: 38px; background-color: #FFF; }
.search-group .glyphicon { position: absolute; margin: 12px 0 0 18px; color: $primary-color; font-weight: 600; }
.search-group .form-control { padding-left: 45px; }
.btn-toolbar { margin-left: 0; }
.btn-toolbar > .btn, .btn-toolbar > .btn-group, .btn-toolbar > .input-group { margin-left: 0; }
.btn-toolbar .btn { min-width: 210px; padding-left: 20px; text-align: left; font-weight: 300; }
.btn-toolbar .btn-toolbar-title { margin: 7px 20px 0; }
/* DROPDOWN BTNS */
.btn .caret { position: absolute; right: 0; top: 0; margin: 17px; border-width: 5px; }
.dropdown-toggle { border: 1px solid $dark-grey; }
.dropdown-toggle:before, .dropdown-toggle:after {
	content: ''; position: absolute; display: block; bottom: 0; right: 17px; border: 5px solid transparent;
}
.dropdown-toggle:before { border-bottom-color: $dark-grey; }
.dropdown-toggle:after { border-bottom-color: $grey; bottom: -1px; }
.dropdown-menu { width: 100%; border-radius: 0; margin-left: -2px; }
.dropdown-menu > li > a { padding-left: 10px; padding-right: 10px; white-space: normal; }
.fill-light-grey .dropdown-toggle:after { border-bottom-color: $light-grey }

/* UI DROPDOWNS */
.ui.dropdown .menu > .input > .glyphicon { position: absolute; right: 0; margin: 22px 20px 0 0; color: $primary-color; }
.ui.dropdown .menu > .item { font-size: 12px; }
.ui.floating.dropdown > .menu { margin-top: 2px !important; }
.ui.scrolling.dropdown .menu, .ui.dropdown .scrolling.menu { max-height: 270px; }

/* BOX */
.box { padding: 20px; }
.box>:first-child { margin-top: 0; }
.box>:last-child { margin-bottom: 0; }
.box .btn-group-justified { padding: 0; background-color: transparent; margin-top: 15px; }
.box .btn-group-justified .search-group { width: 3%; }

/* SPACES */
.space-bottom { margin-bottom: 30px; }
.space-bottom-plus { margin-bottom: 50px; }
.inspace-top-bottom { padding-top: 50px; padding-bottom: 50px; }
ul.space-between>li:not(:last-of-type) { margin-bottom: 10px; }

/* TITLES */
/* border-bottom-arrow */
.border-bottom-arrow { 
	display: inline-block; border-bottom: 1px solid $primary-color; font-size: 38px; position: relative; margin-top: 10px;
}
.border-bottom-arrow:before {
	content: ''; position: absolute; display: block; bottom: 0; left: 50%; margin-bottom: -10px; 
	margin-left: -5px; border: 5px solid; border-top-color: #FFF;
}
.border-bottom-arrow:after {
	content: ''; position: absolute; display: block; bottom: 0; left: 50%; margin-bottom: -11.2px; 
	margin-left: -5px; border: 5px solid; border-color: #FFF; border-top-color: transparent;
}
@media(max-width: 1199px) {
	.border-bottom-arrow { font-size: 30px; margin-top: 0; }
}
/* title-block */
.title-block { padding: 12px 20px; text-align: right; margin-bottom: 30px; }


/* IMAGES */
img.cover { width: 100%; height: auto; }

/* ICONS */
.icon-social { display: inline-block; background: url('<%= asset_path 'icons-social.png' %>'); height: 30px; width: 30px; }
.icon-social.twitter { background-position: -30px 0; }
.icon-social.youtube { background-position: -60px 0; }
.icons-social a:not(:last-of-type) { margin-right: 10px; }

/* NAVBAR */
.navbar-fixed-top { position: absolute; }
.navbar { min-height: 70px; margin-bottom: 0; font-size: 14px; padding-top: 15px; padding-bottom: 15px; }
.navbar-brand { height: 70px; }
.navbar-default { background-color: transparent; border-color: transparent; }
.navbar-toggle { margin-top: 17px; margin-bottom: 17px; } 
.navbar-default .navbar-nav > li > a {
	color: #FFF; text-transform: uppercase; font-weight: 300; padding-top: 5px; padding-bottom: 5px;
}
.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus { color: $primary-color; }
.navbar-default .navbar-nav > .active > a,
.navbar-default .navbar-nav > .active > a:hover,
.navbar-default .navbar-nav > .active > a:focus {
	background-color: $primary-color;
	color: #FFF;	
}
.navbar-nav .search-group { margin: -2px 0 0 20px; }
.navbar-nav .search-group .glyphicon { margin: 7px 15px; color: #FFF; }
.navbar-nav .search-group .form-control { background-color: transparent; color: #FFF; }
.navbar-nav ::-webkit-input-placeholder { color: #FFF; }
.navbar-nav :-moz-placeholder { color: #FFF; }
.navbar-nav ::-moz-placeholder { color: #FFF; }
.navbar-nav :-ms-input-placeholder { color: #FFF; }
@media (min-width: 768px) {
	.navbar-nav { margin: 22px; }
}

/* NAV TABS */
.nav-tabs { border: 0; background-color: #d3d3d3; padding: 5px; margin-bottom: 20px; }
.nav-tabs > li { margin-bottom: 0; }
.nav-tabs > li > a { margin: 0; border-radius: 0; border: 0; margin-right: 5px; min-width: 110px; text-align: center; }
.nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
	background-color: $primary-color; color: #FFF;
}
.nav > li > a:hover, .nav > li > a:focus {
	border: 0; background-color: transparent; color: $primary-color-dark;
}
.tab-content { margin-bottom: 60px; }

/*FOOTER*/
footer { background-color: #000; padding-top: 80px; padding-bottom: 80px; color: #FFF; }
footer a { color: inherit; }
footer a:hover, footer a:focus  { color: $dark-grey; }
footer h4 { margin-top: 0; }
@media(max-width: 767px) {
	footer { text-align: center; }
	footer .row>div {
		margin-bottom: 40px;
	}
}