.container.speaker-thumbs .row { margin-right: -9px; margin-left: -9px; }
.container.speaker-thumbs .row>div { padding-left: 9px; padding-right: 9px; }

.container.post-show { margin-bottom: 50px; }

.video-box { margin-bottom: 45px; }
@media(min-width: 768px) {
	.video-box { padding: 0 45px; margin-bottom: 45px; }
}

.youtube-video { position: relative; padding-bottom: 55%; }
.youtube-video iframe { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }

.container.highlighted-post { margin-top: 50px; margin-bottom: 50px; }
.container.highlighted-post h2 { cursor: pointer; }
.post-date { margin-top: 0px; margin-bottom: 20px; }
@media(max-width: 1199px) {
	.container.highlighted-post h2 { margin-top: 0; }
}
@media(max-width: 991px) {
	.highlighted-post .youtube-video { margin: 10px 0 15px; }
}

/* SPEAKER SEARCH BAR */
.container.speaker-search-bar, .btn-toolbar { margin-bottom: 30px; }
.container.speaker-search-bar .btn-group-justified>.btn-group:first-child { width: 1.1%; }
.container.speaker-search-bar .btn-group-justified>.btn-group:first-child span {font-weight: 300; }
.container.speaker-search-bar .btn-group-justified>.btn-group:last-child { width: 0.4%; }
.container.speaker-search-bar .btn-group-justified>.btn-group:last-child a { text-transform: uppercase; }
.container .container.speaker-search-bar { margin-left: -15px; margin-right: -15px; }
/* SPEAKER SEARCH BAR MOBILE */
body.mobile .container.speaker-search-bar .btn-group-justified:not(:last-of-type)>.btn-group { width: 1%; }

/* SPEAKER PREVIEW */
.speaker-preview-box h3, .speaker-preview-box img { cursor: pointer; }
@media(min-width: 768px) {
	.speaker-preview-box { height: 480px; }
	.speaker-preview-box p { height: 120px; overflow: hidden; margin-bottom: 15px; }
	@media(max-width: 991px) {
		.speaker-preview-box { height: 450px; }
		.speaker-preview-box p { height: 100px; }
	}
}
@media(min-width: 992px) and (max-width: 1199px) {
	.speaker-preview-box { height: 435px; }
}
@media(max-width: 767px) {
	.speaker-preview-box { margin-bottom: 50px; }
}
.speakers-empty { padding-bottom: 60px; }

/* POSTS PREVIEW */
.preview-posts h2 { margin-top: 0; cursor: pointer; }
@media(max-width: 767px) {
	.preview-posts .youtube-video { margin-bottom: 15px; }
}

/* LAST POSTS */
.last-posts { padding: 10px; }
.last-posts h3 { margin-top: 0; }
@media(min-width: 768px) {
	.last-posts { height: 359px; }
	@media(max-width: 1199px) {
		.last-posts { height: 295px; }
	}
	@media(max-width: 991px) {
		.last-posts { height: 224px; }
	}
}
@media(max-width: 991px) {
	.last-posts hr { margin-top: 10px; margin-bottom: 10px; }
}
@media(min-width: 992px) {
	.last-posts { padding: 20px; }
}
@media(min-width: 1200px) {
	.last-posts h3 { margin-top: 5px; }
}

/* objects inside cols fill col padding */
@media(min-width: 768px) {
	.fill-padding { margin-right: -15px; margin-left: -15px; }
	.fill-padding-right { margin-right: -15px; }
	.fill-padding-left { margin-left: -15px; }
}

/* SECTION IMAGES */
.section-image, .section-speaker-profile { margin-bottom: 30px; }
.section-image { color: #FFF; height: 215px; background-size: cover; background-position: center top; }
.section-image h2 { margin-top: 160px; }
.section-image.speakers { background-image: url('<%= asset_path 'section-speakers.jpg' %>'); }
.section-image.areas { background-image: url('<%= asset_path 'section-areas.jpg' %>'); }
.section-image.contacts { background-image: url('<%= asset_path 'section-contacts.jpg' %>'); }
.section-image.brand { background-image: url('<%= asset_path 'section-brand.jpg' %>'); }
.section-image.posts { background-image: url('<%= asset_path 'section-posts.jpg' %>'); }
.section-image.admin { background-image: url('<%= asset_path 'section-brand.jpg' %>'); }

.section-image.posts a.arrow-back { margin: 14px 0 0; }

.section-speaker-profile { position: relative; height: 490px; overflow: hidden; }
.section-speaker-profile-caption {
	position: absolute; z-index: 10; color: #FFF;
	padding: 175px 60% 0 0;
}
.section-speaker-profile>img { position: absolute; min-width: 1200px; width: 100%; height: auto; }
.speaker-profile-images-list img { margin-bottom: 30px; }
.speaker-profile-contact a.btn { text-transform: none; }
.speaker-profile-contact a.btn-block { padding: 20px 0; margin-bottom: 20px; }
@media(max-width: 1199px) {
	.section-speaker-profile>img { left: 50%; margin-left: -600px; }
}
@media(max-width: 767px) {
	.section-speaker-profile { height: 320px; }
	.section-speaker-profile-caption { padding: 80px 15px 0; text-align: center; }
	.section-speaker-profile>img { min-width: 786px; margin-left: -393px; }
}